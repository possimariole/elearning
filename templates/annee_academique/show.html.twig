{% extends 'base.html.twig' %}

{% block title %}AnneeAcademique{% endblock %}

{% block body %}
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <h3 class="card-header text-uppercase ">Détail sur l'annee academique </h3>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="debut" class="col-form-label">Début</label>
                                    <input id="debut" disabled type="text" class="form-control form-control-sm" value={{ annee_academique.debut|date('d/m/Y') }}>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="fin" class="col-form-label">Fin</label>
                                    <input id="fin" disabled type="text" class="form-control form-control-sm" value={{ annee_academique.fin|date('d/m/Y') }}>
                                </div>
                            </div>
                        </div>
                        <a class="btn btn-xs btn-primary float-right mr-2" href="{{ path('annee_academique_edit', {'id': annee_academique.id}) }}">
                            <i class="fa fa-pencil-square-o"></i>&nbsp;Modifier
                        </a>
                        <a class="btn btn-xs btn-info float-right mr-2" href="{{ path('annee_academique_index') }}">
                            <i class="fa fa-list"></i>&nbsp;Liste
                        </a>
                        {{ include('annee_academique/_delete_form.html.twig') }}
                    </div>                            
                </div>
            </div>
        </div>
    </div>
{% endblock %}
