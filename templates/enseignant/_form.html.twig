{% macro renderDiplomeRow(diplomeForm) %}                                  
	<td>{{ form_widget(diplomeForm.nom) }}</td>
	<td>{{ form_widget(diplomeForm.session) }}</td>
	<td>{{ form_widget(diplomeForm.mention) }}</td>
{% endmacro %}

